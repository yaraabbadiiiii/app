
Description=AI Reader - Headless QR Wi-Fi watcher
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/ai-reader
Environment=PYTHONPATH=/home/pi/ai-reader
Environment=AI_READER_LOG_DIR=/var/log/ai-reader
# Environment=AI_READER_AUDIO=0  # uncomment to mute beeps
ExecStartPre=/bin/mkdir -p /var/log/ai-reader
ExecStartPre=/bin/chown -R pi:pi /var/log/ai-reader
ExecStart=/usr/bin/python3 -u scripts/test_online_via_qr.py
Restart=on-failure
RestartSec=2
TimeoutStartSec=30

[Install]
WantedBy=multi-user.target
